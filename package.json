{
  "name": "stellar-fed-watcher",
  "version": "1.0.0",
  "description": "Stellar Network Watcher that sends email to Federated account holder when payment is received",
  "main": "index.js",
  "scripts": {
    "start": "micro",
    "lint": "eslint ."
  },
  "now": {
    "env": {
      "REDIS_URL": "@redis-url",
      "EMAIL": "@email",
      "PASSWORD": "@password",
      "NEW_ACCOUNTS_CACHE_KEY": "@new-accounts-cache-key",
      "SALT": "@salt",
      "NODE_ENV": "production"
    }
  },
  "author": "Ankur Patel <ankur@stellarfed.org> (https://stellarfed.org)",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^3.0.0",
    "micro": "^9.3.2",
    "nodemailer": "^4.6.7",
    "nodemailer-smtp-transport": "^2.7.4",
    "now-env": "^3.1.0",
    "redis": "^2.8.0",
    "stellar-sdk": "^0.9.1"
  },
  "devDependencies": {
    "eslint": "^5.0.1"
  }
}
